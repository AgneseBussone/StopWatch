<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="?settings_background">

    <TextView
        android:id="@+id/settingsTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="monospace"
        android:text="@string/settings_screen_title"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settingsTitleTV"
        app:srcCompat="@drawable/line_settings"/>

    <ExpandableListView
        android:id="@+id/settingExpandableList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:divider="@drawable/line_settings"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:groupIndicator="@null"/>
</RelativeLayout>